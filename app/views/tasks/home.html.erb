<h1 style="text-align: center; margin: 0 0 50px 0">Todo List</h1>
<table style="width: 100%; margin: 0 0 50px 0; border: 1px solid">
  <thead>
    <tr>
      <th class="table_id" style="width: 5%; font-size: 24px; border: 1px solid">id</th>
      <th class="table_name" style="width: 50%; font-size: 24px; border: 1px solid">text</th>
      <th class="table_date" style="width: 20%; font-size: 24px; border: 1px solid">created</th>
      <th class="table_edit" style="width: 20%; font-size: 24px; border: 1px solid">updated</th>
      <th class="teble_edit" style="width: 5%; font-size: 24px; border: 1px solid">edit</th>
      <th class="teble_delete" style="width: 5%; font-size: 24px; border: 1px solid">delete</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |t| %>
    <tr>
      <th style="border: 1px solid; padding: 10px;">
    <%= t.id %>
      </th>
      <th style="border: 1px solid">
    <%= t.name %>
      </th>
      <th style="border: 1px solid">
    <%= t.created_at.to_time.strftime('%B %e at %l:%M %p') %>
      </th>
      <th style="border: 1px solid">
    <%= t.updated_at.to_time.strftime('%B %e at %l:%M %p') %>
      </th>
      <th style="border: 1px solid">
    <%= link_to "Edit", edit_task_path(t) %>
      </th>
      <th style="border: 1px solid">
    <%= button_to "Delete", t, remote: true, method: :delete%>
      </th>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New Task", new_task_path %>